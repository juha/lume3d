<?xml version="1.0" encoding="utf-8"?>
<mx:Application 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	layout="absolute" 
	xmlns:ns1="*"
	applicationComplete="creationComplete()"
	backgroundGradientAlphas ="[0.2, 1.0]"
	backgroundGradientColors="[0xeeeeee, 0xffffff]"
	backgroundColor="0xffffff"
	width="960"
	height="600">
	
	<ns1:EngineManager x="0" y="0" width="100%" height="100%" id="engineManager"/>
	
	<mx:Script>
	<![CDATA[ 
	    
	    public function creationComplete():void {
		   trace('FLEX: calling engineManager.init');
           engineManager.init();											
	    }
	    
	    // ROCK'n'ROLL
        public function onRollRight():void 
        {
            engineManager.model.roll(1);
        }
        public function onRollLeft():void 
        {
            engineManager.model.roll(-1);
        }
        
        // PITCH BLACK
        public function onPitchRight():void 
        {
            engineManager.model.pitch(1);
        }
        public function onPitchLeft():void 
        {
            engineManager.model.pitch(-1);
        }
        
        // YAW(n)
        public function onYawRight():void 
        {
            engineManager.model.yaw(1);
        }
        public function onYawLeft():void 
        {
            engineManager.model.yaw(-1);
        }
        
        
	 ]]>
	 </mx:Script>
	
</mx:Application>
